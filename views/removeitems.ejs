    <%  menuitems.forEach(function(item){ %>
      <div class="card" style="width:18vm">
        <img class="card-img-top foodimg" src="<%= item.imgurl %>" alt="<%=item.name%>">

        <div class="card-body">
          <h5 class="card-title"><%=item.name%></h5>
          <p class="card-text">price: <%=item.price%></p>

        </div>
        <form class="" action="/remove" method="post">
          <button class="btn btn-outline-danger" type="submit" value="<%=item._id%>" name="button">Remove</button>
        </form>
      </div>

      <% }) %>
      <% if(user === "yes"){ %><form action="/logout?_method=DELETE" method="POST"><button class="lobtn mybtn btn btn-outline-danger" type="submit">Log Out</button></form> <% } %>
